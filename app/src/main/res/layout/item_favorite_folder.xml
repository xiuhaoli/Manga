<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/item_background"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/icon_item_favorite_folder"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        app:placeholderImage="@mipmap/icon_folder"/>

    <TextView
        android:id="@+id/text_item_favorite_folder"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/icon_item_favorite_folder"
        android:gravity="center"
        android:text="@string/theme_type_black"
        android:textColor="?attr/item_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/content_item_favorite_folder"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toStartOf="@+id/arrow_right_item_favorite_folder"
        android:gravity="center"
        android:textColor="?attr/item_text"
        android:textSize="13sp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/arrow_right_item_favorite_folder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        app:placeholderImage="@mipmap/arrow_right" />

</RelativeLayout>